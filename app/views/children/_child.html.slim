.has-text-centered
  .child__info
    .columns.is-mobile.is-vcentered.is-centered.is-gapless
      .column.is-narrow-mobile
        .has-text-centered
          button class="js-modal-trigger" data-target="modal-js-example"
            | ▼
        div id="modal-js-example" class="modal"
          .modal-background
          .modal-content
            .box.modal__items
              .modal__item
                .columns.is-vcentered.is-gapless.is-mobile.border
                  .column.is-1
                  .column.is-2.has-text-centered.is-size-5
                    | 全員
                  .column.is-11
                - current_user.children.each do |child|
                  .columns.is-vcentered.is-gapless.is-mobile.border
                    .column.is-1
                    .column.is-2.has-text-centered.is-vcentered
                      = image_tag child.avatar_url, class: 'child__picture_modal'
                    .column.is-1.is-size-5
                      =link_to child.name, child_schedules_path(child)
                    .column.is-1
                    .column.is-5
                      = link_to child.calc_moon_age(Date.current), child_schedules_path(child)
                    .column.is-4
      button class="modal-close is-large" aria-label="close"
      a.column.is-3-mobile href=child_schedules_url(child)
        .has-text-centered
          = image_tag child.avatar_url, class: 'child__picture'
      a.column.is-5-mobile href=child_schedules_url(child)
        .has-text-centered
          .is-size-6.is-inline-block
            = child.name + '　'
          .is-size-7.is-inline-block
            = child.calc_moon_age(Date.current)
        .has-text-centered.is-size-7
          = "#{child.birthday.strftime('%Y年%m月%d日')}生まれ"
      - unless current_page?(child_histories_url(child))
        a.column.is-narrow-mobile href=child_histories_url(child)
          .square__item.has-text-centered
            .record__items
              i.fa-solid.fa-pen-to-square.fa-lg
              br
              p.is-size-7
                | 記録
      - else
        a.column.is-narrow-mobile
          .has-text-centered
          | 　　　
